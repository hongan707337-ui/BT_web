@model QuanLyDoanhThuBH.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2>Chi tiết sản phẩm</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã SP</dt>
        <dd class="col-sm-10">@Model.MaSP</dd>

        <dt class="col-sm-2">Tên sản phẩm</dt>
        <dd class="col-sm-10">@Model.TenSP</dd>

        <dt class="col-sm-2">Đơn giá</dt>
        <dd class="col-sm-10">@Model.DonGia.ToString("N0")</dd>

        <dt class="col-sm-2">Số lượng tồn</dt>
        <dd class="col-sm-10">@Model.SoLuongTon</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.MaSP" class="btn btn-warning">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
