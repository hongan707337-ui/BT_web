@model QuanLyDoanhThuBH.Models.SanPham

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2>Xóa sản phẩm</h2>

<h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>

<div>
    <h4>@Model.TenSP</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã SP</dt>
        <dd class="col-sm-10">@Model.MaSP</dd>

        <dt class="col-sm-2">Đơn giá</dt>
        <dd class="col-sm-10">@Model.DonGia.ToString("N0")</dd>

        <dt class="col-sm-2">Số lượng tồn</dt>
        <dd class="col-sm-10">@Model.SoLuongTon</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MaSP" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
