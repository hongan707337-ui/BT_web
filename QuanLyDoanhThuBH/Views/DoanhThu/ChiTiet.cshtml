@model IEnumerable<QuanLyDoanhThuBH.Models.HoaDon>

@{
    ViewData["Title"] = $"Chi tiết hóa đơn - {ViewBag.Month}/{ViewBag.Year}";
}

<div class="container mt-3">
    <h2>@ViewData["Title"]</h2>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Mã HĐ</th>
                <th>Khách hàng</th>
                <th>Sản phẩm</th>
                <th>Ngày tạo</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var hd in Model)
                {
                    <tr>
                        <td>@hd.MaHD</td>
                        <td>@hd.KhachHang?.TenKH</td>
                        <td>@hd.SanPham?.TenSP</td>
                        <td>@hd.NgayTao.ToString("dd/MM/yyyy")</td>
                        <td>@hd.TongTien.ToString("N0") đ</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Không có hóa đơn nào</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="BaoCao" class="btn btn-secondary">Quay lại</a>
</div>
