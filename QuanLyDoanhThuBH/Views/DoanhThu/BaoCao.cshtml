@model IEnumerable<QuanLyDoanhThuBH.Models.DoanhThu>

@{
    ViewData["Title"] = "Báo cáo Doanh thu";
    var years = ViewBag.AvailableYears as List<int>;
    var months = ViewBag.AvailableMonths as List<int>;
    int? selectedYear = ViewBag.SelectedYear as int?;
    int? selectedMonth = ViewBag.SelectedMonth as int?;
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">@ViewData["Title"]</h2>

    <!-- Form lọc -->
    <form method="get" asp-action="BaoCao" class="row g-3 mb-4">
        <div class="col-md-3">
            <label for="year" class="form-label">Năm</label>
            <select name="year" class="form-select" id="year">
                @if (years != null)
                {
                    foreach (var y in years)
                    {
                        if (ViewBag.SelectedYear == y)
                        {
                            <option value="@y" selected="selected">@y</option>
                        }
                        else
                        {
                            <option value="@y">@y</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="col-md-3">
            <label for="month" class="form-label">Tháng</label>
            <select name="month" class="form-select" id="month">
                <option value="">-- Tất cả --</option>
                @if (months != null)
                {
                    foreach (var m in months)
                    {
                        if (ViewBag.SelectedMonth == m)
                        {
                            <option value="@m" selected="selected">@m</option>
                        }
                        else
                        {
                            <option value="@m">@m</option>
                        }
                    }
                }
            </select>
        </div>
        <div class="col-md-3 align-self-end">
            <button type="submit" class="btn btn-primary">Lọc</button>
        </div>
    </form>

    <!-- Bảng báo cáo -->
    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>Tháng</th>
                <th>Năm</th>
                <th>Tổng doanh thu</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Thang</td>
                        <td>@item.Nam</td>
                        <td>@item.TongDoanhThu.ToString("N0") đ</td>
                        <td>
                            <a asp-action="Details" asp-route-year="@item.Nam" asp-route-month="@item.Thang" class="btn btn-sm btn-info">
                                Xem chi tiết
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-muted">Không có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
</div>
