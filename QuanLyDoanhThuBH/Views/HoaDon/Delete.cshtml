@model QuanLyDoanhThuBH.Models.HoaDon

@{
    ViewData["Title"] = "Xóa Hóa đơn";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc muốn xóa hóa đơn này?</h4>
<div>
    <p><strong>Khách hàng:</strong> @Model.KhachHang?.TenKH</p>
    <p><strong>Sản phẩm:</strong> @Model.SanPham?.TenSP</p>
    <p><strong>Tổng tiền:</strong> @Model.TongTien</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MaHD" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
