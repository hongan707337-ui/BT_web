@model QuanLyDoanhThuBH.Models.HoaDon

@{
    ViewData["Title"] = "Sửa hóa đơn";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaHD" />

    <div class="form-group">
        <label>Khách hàng</label>
        <select asp-for="MaKH" class="form-control" asp-items="ViewBag.KhachHangList"></select>
    </div>

    <div class="form-group">
        <label>Sản phẩm</label>
        <select asp-for="MaSP" class="form-control" asp-items="ViewBag.SanPhamList"></select>
    </div>

    <div class="form-group">
        <label>Số lượng</label>
        <input asp-for="SoLuong" class="form-control" />
    </div>

    <div class="form-group">
        <label>Đơn giá</label>
        <input asp-for="DonGia" class="form-control" />
    </div>

    <div class="form-group">
        <label>Tổng tiền</label>
        <input asp-for="TongTien" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
