@model IEnumerable<QuanLyDoanhThuBH.Models.HoaDon>

@{
    ViewData["Title"] = "Danh sách Hóa đơn";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm hóa đơn</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã HD</th>
            <th>Ngày tạo</th>
            <th>Khách hàng</th>
            <th>Sản phẩm</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Tổng tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaHD</td>
                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                <td>@item.KhachHang?.TenKH</td>
                <td>@item.SanPham?.TenSP</td>
                <td>@item.DonGia</td>
                <td>@item.SoLuong</td>
                <td>@item.TongTien</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaHD" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaHD" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
