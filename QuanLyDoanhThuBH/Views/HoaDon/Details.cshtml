@model QuanLyDoanhThuBH.Models.HoaDon

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Mã hóa đơn</dt>
    <dd class="col-sm-10">@Model.MaHD</dd>

    <dt class="col-sm-2">Ngày tạo</dt>
    <dd class="col-sm-10">@Model.NgayTao.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-2">Khách hàng</dt>
    <dd class="col-sm-10">@Model.KhachHang?.TenKH</dd>

    <dt class="col-sm-2">Sản phẩm</dt>
    <dd class="col-sm-10">@Model.SanPham?.TenSP</dd>

    <dt class="col-sm-2">Đơn giá</dt>
    <dd class="col-sm-10">@Model.DonGia.ToString("N0") đ</dd>

    <dt class="col-sm-2">Số lượng</dt>
    <dd class="col-sm-10">@Model.SoLuong</dd>

    <dt class="col-sm-2">Tổng tiền</dt>
    <dd class="col-sm-10">@Model.TongTien.ToString("N0") đ</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
