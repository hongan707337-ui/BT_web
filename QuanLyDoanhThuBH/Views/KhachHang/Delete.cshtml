@model QuanLyDoanhThuBH.Models.KhachHang

@{
    ViewData["Title"] = "Xóa khách hàng";
}

<div class="container mt-3" style="max-width: 600px;">
    <h2>Xác nhận xóa</h2>
    <p>Bạn có chắc chắn muốn xóa <strong>@Model.TenKH</strong> (KH@Model.MaKH) không?</p>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.MaKH" method="post">
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
